                +color-item({name: "Green", description: "#6FCF96", color: "green-color"})
            .main-wrapper__item
                +text-item({demo: "H1", info: "This one is the sub-section or widget title"})
                +text-item({demo: "H2", info: "Next one is the item title inside widgets"})
                +text-item({demo: "H3", info: "This is a label or CTA text", montserrat: true})
                +text-item({demo: "Body", info: "This is the body text which is used for most of the design, like paragraphs, lists, etc.", color: true})