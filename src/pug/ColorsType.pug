include ../components/blocks/color-item/color-item.pug
include ../components/blocks/text-item/text-item.pug

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Document
    body
        header 
            include ../components/blocks/header/header.pug 
        .main-wrapper
            .main-wrapper__item
                +color-item({name: "Dark Shade 100%", description: "#1F2041", color: "dark-color"})
                +color-item({name: "Dark Shade 75%", description: "#1F2041", color: "dark-75-color"})
                +color-item({name: "Dark Shade 50%", description: "#1F2041", color: "dark-50-color"})
