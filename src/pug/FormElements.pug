    body
        header 
            include ../components/blocks/header/header.pug
        .main-wrapper
            .main-wrapper__item
                +field-wrapper({name:"Text field", status: "default"})
                    +text-field({placeholder: "Email"})
                +field-wrapper({name:"Text field", status: "Hover / Focus"})
                    +text-field({placeholder: "Some text", focus: true, value: "This is pretty awesome"})
                +field-wrapper({name: "Dropdown", status: "default"})
                    +dropdown({text: "Сколько гостей"})
                        +dropdown-option({item: "Взрослые", id: "item1"})
                        +dropdown-option({item: "Дети", id: "item2"})
                        +dropdown-option({item: "Младенцы",id: "item3"})
                +field-wrapper({name: "Masked text field", status: "default"})
                    +date-picker({placeholder: "ДД.ММ.ГГГГ"})
                .date-dropdown__container    
                    +field-wrapper({name: "Date dropdown",dateDropdown: true})
                        +date-dropdown({value: "дд.мм.гггг"})
                    +field-wrapper({name: "Date dropdown",dateDropdown: true})
                        +date-dropdown({value: "дд.мм.гггг"})
                +field-wrapper({name: "Filter date dropdown", tight: true})
                    +date-filter({value: "19 авг - 23 авг"})
                +field-wrapper({name: "Subscription text field", tight: true})
                    +subs-field({placeholder: "Email"})
            .main-wrapper__item
                +field-wrapper({name: "Checkbox Buttons",highBottom: true, tocolumn: true})
                    +checkbox-btn({text: "Можно курить", name: "smoking"})
                    +checkbox-btn({text: "Можно с питомцами", name: "pets", checked: true})
                    +checkbox-btn({text: "Можно пригласить гостей (до 10 человек)", name: "guests", checked: true})
                +field-wrapper({name: "Radio Buttons",highBottom: true})
                    +radio-btn-container()
                        +radio-btn({text: "Мужчина", name: "sex", id: "men"})
                        +radio-btn({text: "Женщина", name: "sex", id: "women"})
                +field-wrapper({name: "Toggle",highBottom: true, tocolumn: true})
                    +toggle({text:"Получать спецпредложения", name: "offers", checked: true})
                    +toggle({text:"Получать спецпредложения"})
                +field-wrapper({name: "Like button",highBottom: true})
                    +like-btn({likes: 2})
                    +like-btn({likes: 12, liked: true})
                +field-wrapper({name: "Rate button",highBottom: true})
                    +rate-btn({stars: 5,name:"rating-1", checked: 4})
                    +rate-btn({stars: 5,name:"rating-2", checked: 5})

            .main-wrapper__item
                +field-wrapper({name: "Range Slider",highBottom: true, status:"5 000₽ - 10 000₽", statusId: "range-slider-result"})
                    +range-slider({from: "0",to: "15000",step: "500"})
                +field-wrapper({name:"Buttons",highBottom: true})
                    +link({text: "Click me", btn: true})
                    +link({text: "Click me", hover: true, btn: true})
                    +link({text: "Click me", borderBtn: true})
                    +link({text: "Click me", borderBtn: true, hover: true})
                    +link({text: "Click me"})
                    +link({text: "Click me",  hover: true})
                    +link({text: "Перейти к оплате", bigBtn: true})
                +field-wrapper({name:"Pagination",highBottom: true})
                    +pagination({currentPage: 1, total: 15})
            .main-wrapper__item
                +field-wrapper({name: "Dropdown", status: "default"})
                    +dropdown({text: "2 спальни, 2 кровати..."})
                        +dropdown-option({item: "Спальни", id: "item1"})
