<!DOCTYPE html>
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Cards
    body.greybg
        header
            +wrapper({})
                +logo({})
        +mainWrapper()
            +mainWrapperItem({})
                +search({title: "Найдём номера под ваши пожелания",uiKit:true})
                +sign-up({title: "Регистрация аккаунта"})
            +mainWrapperItem({})
                +reservation({
                    id: "reservation",
                    room: "888", 
                    category: "Люкс", 
                    price: "9 990", 
                    idstart: "date-picker2-start",
                    idend: "date-picker2-end"
                })
                    +service({name: "9 990₽ х 4 суток", price: "39 960"})
                    +service({name: "Сбор за услуги: скидка 2 179₽", price: "0", info: true})
                    +service({name: "Сбор за дополнительные услуги", price: "300", info: true})
                +sign-in()
            +mainWrapperItem({})
                #datepicker-inline
                +room-preview({
                    room: 888,
                    category: "Люкс",
                    price: "9990",
                    starsChecked: 5,
                    reviews: 145
                })
                    .room-slider__slide
                        img(src="assets/img/888.jpg", alt="1")
                    .room-slider__slide
                        img(src="assets/img/888.jpg", alt="2")
                    .room-slider__slide
                        img(src="assets/img/888.jpg", alt="3")
                +room-preview({
                    room: 840,
                    category: "Люкс",
