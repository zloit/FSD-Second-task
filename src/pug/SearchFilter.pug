include ..\components\blocks\footer\footer.pug
include ..\components\blocks\search\search.pug
include ..\components\blocks\wrapper\wrapper.pug
include ..\components\blocks\dropdown\dropdown.pug
include ..\components\blocks\date-picker\date-picker.pug
include ..\components\blocks\expand-checklist\expand-checklist.pug
include ..\components\blocks\checkbox-btn\checkbox-btn.pug
